{% extends '/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin: 5px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            border: none;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .btn:active {
            background-color: #004085;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <a href="{{ path('user_profile') }}" class="btn">Profile</a>
        <a href="{{ path('user_security_centre') }}" class="btn">Security Centre</a>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">Save changes</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
