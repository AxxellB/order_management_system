{% extends 'base.html.twig' %}

{% block title %}Edit {{ product.name }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Edit Product: {{ product.name }}</h1>

        <div class="card mt-4">
            <div class="card-body">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.name, 'Product Name', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control' ~ (form.name.vars.valid ? '' : ' is-invalid')}}) }}
                    {% if form.name.vars.errors %}
                        <div class="invalid-feedback d-block mt-2">
                            {{ form_errors(form.name) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    {{ form_label(form.price, 'Price', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.price, {'attr': {'class': 'form-control' ~ (form.price.vars.valid ? '' : ' is-invalid')}}) }}
                    {% if form.price.vars.errors %}
                        <div class="invalid-feedback d-block mt-2">
                            {{ form_errors(form.price) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form.description.vars.valid ? '' : ' is-invalid')}}) }}
                    {% if form.description.vars.errors %}
                        <div class="invalid-feedback d-block mt-2">
                            {{ form_errors(form.description) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    {{ form_label(form.stockQuantity, 'Stock Quantity', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.stockQuantity, {'attr': {'class': 'form-control' ~ (form.stockQuantity.vars.valid ? '' : ' is-invalid')}}) }}
                    {% if form.stockQuantity.vars.errors %}
                        <div class="invalid-feedback d-block mt-2">
                            {{ form_errors(form.stockQuantity) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    {{ form_label(form.categories, 'Categories', {'label_attr': {'class': 'form-label fw-bold'}}) }}

                    <div class="form-group">
                        {% for child in form.categories %}
                            <div class="form-check form-check-inline">
                                {{ form_widget(child, {'attr': {'class': 'form-check-input' ~ (child.vars.valid ? '' : ' is-invalid')}}) }}
                                {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                        {% endfor %}
                    </div>

                    {% if form.categories.vars.errors %}
                        <div class="invalid-feedback d-block mt-2">
                            {{ form_errors(form.categories) }}
                        </div>
                    {% endif %}
                </div>

                <button class="btn btn-primary">{{ button_label|default('Save Changes') }}</button>

                {{ form_end(form) }}
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('product_index') }}" class="btn btn-secondary">Back to Products</a>
        </div>
    </div>
{% endblock %}
